rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Match the path for vendor snaps.
    // TEMPORARY: Allow all authenticated writes for debugging
    // TODO: Restore proper UID matching after emulator auth issue is resolved
    match /vendors/{userId}/snaps/{allPaths=**} {
      allow read: if true; // Allow all reads for testing
      allow write: if request.auth != null 
                   && request.resource.size < 1 * 1024 * 1024; // 1 MB
      // DEBUG: Original rule that should work:
      // allow write: if request.auth != null && request.auth.uid == userId
      //              && request.resource.size < 1 * 1024 * 1024; // 1 MB
    }
  }
}
